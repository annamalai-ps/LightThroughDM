#    LightThroughDM::density
#    LightThroughDM::constraint
#"

CarpetX::out_silo_vars = "
    LightThroughDM::phi
    LightThroughDM::Ax
    LightThroughDM::Ay
    LightThroughDM::Az
    LightThroughDM::phi_flat
    LightThroughDM::Ax_flat
    LightThroughDM::Ay_flat
    LightThroughDM::Az_flat
    
    LightThroughDM::density
    LightThroughDM::constraint
    LightThroughDM::RMSError
"

