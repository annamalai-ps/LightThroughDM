ActiveThorns = "
    CarpetX
    IOUtil
    ODESolvers
    TimerReport
    BoxInBox
    LightThroughDM
    CoordinatesX
"

$nlevels = 1
#xy domain defined by 4% of alpha amplitude
$xy_domain_min = -300.0
$xy_domain_max = 300.0
$z_domain_min = -950.0
$z_domain_max = 950.0

#change this when you change resolution,dtfac
$out_every = 100

Cactus::cctk_show_schedule = no
Cactus::presync_mode = "mixed-error"

CarpetX::poison_undefined_values = yes

CarpetX::ncells_x = 84
CarpetX::ncells_y = 84
CarpetX::ncells_z = 672

CarpetX::xmin = $xy_domain_min
CarpetX::xmax = $xy_domain_max
CarpetX::ymin = $xy_domain_min
CarpetX::ymax = $xy_domain_max
CarpetX::zmin = $z_domain_min
CarpetX::zmax = $z_domain_max


CarpetX::max_num_levels = $nlevels

Cactus::terminate = "time"
Cactus::cctk_final_time = 1900
#Cactus::cctk_itlast = 3

#Set ghost zones for 4th order finite difference method:
CarpetX::ghost_size = 2

# Set periodic boundaries:
CarpetX::periodic_x = yes
CarpetX::periodic_y = yes
CarpetX::reflection_z = yes
CarpetX::reflection_upper_z = yes

LightThroughDM::initial_condition = "plane wave"
LightThroughDM::boundary_condition = "periodic"

# Physics parameters
LightThroughDM::M = 0.887400978862
LightThroughDM::lambdaC_prefactor = 1.0
LightThroughDM::gaussian_wavepacket_width = 20.0

#plane_wave_dist_from_DM defined at z where alpha amplitude gets 1%
LightThroughDM::plane_wave_dist_from_DM = 850.0

LightThroughDM::plane_wave_kx = 0.02
LightThroughDM::plane_wave_ky = 0.02
LightThroughDM::plane_wave_kz = 0.02

ODESolvers::method = "RK4"
CarpetX::dtfac = 0.672

IO::out_dir = $parfile
IO::out_every = $out_every

